{% extends "front-office/base.html.twig" %} {% block body %} {% for flashError
in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}
<div class="container">
  <div class="row">
    <div class="col m-5">
      <h1 class="text-center m-5">
        Register
        <i
          title="la fonction /register lance l'event UserRegisterEvent - enregistre l'inscription dans les logs"
          class="bi bi-info-circle"
          style="font-size: 26px; color: #6c757d; margin-left: 15px"
        ></i>
      </h1>

      {{ form_start(registrationForm) }}
      {{ form_row(registrationForm.username) }}
      {{
        form_row(registrationForm.plainPassword, {
          label: 'Password'
        })
      }}
      {{ form_row(registrationForm.agreeTerms) }}
      {{ form_end(registrationForm) }}
      <button type="submit" class="btn btn-outline-secondary btn-block">
        Register
      </button>
    </div>
  </div>
</div>

{% endblock %}
