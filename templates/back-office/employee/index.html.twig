{% extends 'back-office/base.html.twig' %} {% block title %}Admin panel{%
endblock %} {% block body %}
<h1>Employee index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Roles</th>
      <th>Password</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for employee in employees %}
    <tr>
      <td>{{ employee.id }}</td>
      <td>{{ employee.email }}</td>
      <td>{{ employee.roles ? employee.roles|json_encode : '' }}</td>
      <td>{{ employee.password }}</td>
      <td>
        <a href="{{ path('admin_employee_show', { id: employee.id }) }}"
          >show</a
        >
        <a href="{{ path('admin_employee_edit', { id: employee.id }) }}"
          >edit</a
        >
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="5">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('admin_app_register') }}">Create new</a>
{% endblock %}
