<!DOCTYPE html>

<title>Book index</title>

{% block body %}
<h1>Book index</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Code</th>
      <th>Nb_page</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for book in books %}
    <tr>
      <td>{{ book.id }}</td>
      <td>{{ book.title }}</td>
      <td>{{ book.code }}</td>
      <td>{{ book.nbPage }}</td>
      <td>
        <a href="{{ path('book_form_show', { id: book.id }) }}">show</a>
        <a href="{{ path('book_form_edit', { id: book.id }) }}">edit</a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="5">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('book_form_new') }}">Create new</a>
{% endblock %}
